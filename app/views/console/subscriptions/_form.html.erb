<%= form_for [:console, @subscription], class: 'mb-4' do |f| %>
  <% if @subscription.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= pluralize(@subscription.errors.count, "error") %>:</h2>
      <ul>
        <% @subscription.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :description, t('activerecord.attributes.subscription.description'), class: "form-label" %>
    <%= f.text_field :description, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :default_amount, class: 'form-label' %>
    <div class="input-group">
      <span class="input-group-text">â‚¬</span>
      <%= f.number_field :default_amount,
                         class: 'form-control form-control',
                         step: '0.01',
                         required: true,
                         inputmode: 'decimal' %>
    </div>
  </div>

  <div class="mb-3">
    <%= f.label :subscription_type, t('activerecord.attributes.subscription.subscription_type'), class: 'form-label' %>
    <div>
      <%= f.radio_button :subscription_type, 'monthly', class: 'form-check-input', required: true %>
      <%= f.label :subscription_type_monthly, t('labels.monthly'), class: 'form-check-label' %>
    </div>
    <div>
      <%= f.radio_button :subscription_type, 'annual', class: 'form-check-input', required: true %>
      <%= f.label :subscription_type_annual, t('labels.annual'), class: 'form-check-label' %>
    </div>
    <div>
      <%= f.radio_button :subscription_type, 'quarterly', class: 'form-check-input', required: true %>
      <%= f.label :subscription_type_quarterly, t('labels.quarterly'), class: 'form-check-label' %>
    </div>
    <div>
      <%= f.radio_button :subscription_type, 'semiannual', class: 'form-check-input', required: true %>
      <%= f.label :subscription_type_semiannual, t('labels.semiannual'), class: 'form-check-label' %>
    </div>
  </div>

  <div class="mb-3">
    <%= f.submit @subscription.new_record? ? t('labels.new') : t('labels.update'), class: "btn btn-primary" %>
  </div>
<% end %>
